<div class="container-fluid">
  <h1><%= @restaurant.name %></h1>
  <p><%= @restaurant.address%></p>
  <p><%= @restaurant.phone_number%></p>
  <p><%= @restaurant.category%></p>
  <h4>Reviews: </h4>
  <% @restaurant.reviews.each do |review| %>
  <li> "<%= review.content %>" | <%= review.rating %></li>
  <% end %>

  <p><%= link_to "edit a review", new_restaurant_review_path(@restaurant) %></p>
  <p><%= link_to "Delete", restaurant_path(@restaurant), class: 'btn btn-danger', method: :delete, data: { confirm: "Do you really want to remove it?"} %></p>
</div>
<p><%= link_to "Restaurants", restaurants_path %></p>
